<Window
    x:Class="Movies.WpfApp.MovieEntryWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Movies.WpfApp"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Width="400"
    Height="281"
    MinWidth="400"
    MinHeight="281"
    mc:Ignorable="d"
    Title="Movies">
    <Grid x:Name="FormLayout">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20" />
            <ColumnDefinition Width="Auto" MinWidth="60" />
            <ColumnDefinition Width="Auto" MinWidth="60" />
            <ColumnDefinition Width="*" MinWidth="180" />
            <ColumnDefinition Width="60" />
            <ColumnDefinition Width="20" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="20" />
        </Grid.RowDefinitions>
        <TextBlock
            Grid.Row="1"
            Grid.Column="2"
            Grid.ColumnSpan="2"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            FontSize="18"
            FontWeight="Bold"
            Padding="5"
            Text="Enter a new Movie" />
        <TextBlock
            Grid.Row="2"
            Grid.Column="1"
            Grid.ColumnSpan="2"
            HorizontalAlignment="Right"
            VerticalAlignment="Center"
            Padding="5"
            Text="Movie Title:" />
        <TextBox
            x:Name="TitleInput"
            Grid.Row="2"
            Grid.Column="3"
            VerticalAlignment="Center" />
        <TextBlock
            Grid.Row="3"
            Grid.Column="1"
            Grid.ColumnSpan="2"
            HorizontalAlignment="Right"
            VerticalAlignment="Center"
            Padding="5"
            Text="Genre:" />
        <ComboBox
            x:Name="GenreInput"
            Grid.Row="3"
            Grid.Column="3"
            Width="120"
            HorizontalAlignment="Left"
            VerticalAlignment="Center">
            <ComboBoxItem>Horror</ComboBoxItem>
            <ComboBoxItem>Action</ComboBoxItem>
            <ComboBoxItem>Comedy</ComboBoxItem>
            <ComboBoxItem>RomCom</ComboBoxItem>
            <ComboBoxItem>Documentary</ComboBoxItem>
            <ComboBoxItem>SciFi</ComboBoxItem>
            <ComboBoxItem>Other</ComboBoxItem>
        </ComboBox>
        <TextBlock
            Grid.Row="4"
            Grid.Column="1"
            Grid.ColumnSpan="2"
            HorizontalAlignment="Right"
            VerticalAlignment="Center"
            Padding="5"
            Text="Director:" />
        <TextBox
            x:Name="DirectorInput"
            Grid.Row="4"
            Grid.Column="3"
            VerticalAlignment="Center" />
        <TextBlock
            Grid.Row="5"
            Grid.Column="1"
            Grid.ColumnSpan="2"
            HorizontalAlignment="Right"
            VerticalAlignment="Center"
            Padding="5"
            Text="Year Released:" />
        <TextBox
            x:Name="ReleaseYearInput"
            Grid.Row="5"
            Grid.Column="3"
            VerticalAlignment="Center" />
        <TextBlock
            Grid.Row="6"
            Grid.Column="1"
            Grid.ColumnSpan="2"
            HorizontalAlignment="Right"
            VerticalAlignment="Center"
            Padding="5"
            Text="Average Star Rating:" />
        <ComboBox
            x:Name="StarRatingAverageInput"
            Grid.Row="6"
            Grid.Column="3"
            Width="60"
            HorizontalAlignment="Left"
            VerticalAlignment="Center">
            <ComboBoxItem>1</ComboBoxItem>
            <ComboBoxItem>2</ComboBoxItem>
            <ComboBoxItem>3</ComboBoxItem>
            <ComboBoxItem>4</ComboBoxItem>
            <ComboBoxItem>5</ComboBoxItem>
        </ComboBox>
        <Button
            x:Name="SubmitButton"
            Grid.Row="7"
            Grid.Column="2"
            Grid.ColumnSpan="2"
            Margin="5"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Click="SubmitButton_Click"
            Content="Submit"
            Padding="10,5" />
    </Grid>
</Window>
